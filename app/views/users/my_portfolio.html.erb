<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], class: "form-control form-control-lg", placeholder: "Enter stock ticker symbol", autofocus: true %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= "Search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div >
<%= render "users/result" %>
<% if !@tracked_stocks.empty? %>
  <%= render "stocks/list" %>
<% end %>